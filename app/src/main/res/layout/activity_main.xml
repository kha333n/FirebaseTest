<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/sendDataButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sendDataButtonLabel" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:id="@+id/value_for_firebase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Value" />

            <Button
                android:id="@+id/add_value_to_firebase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add value to Firebase" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/loginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go to login page" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/listAdapterPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go to List Adapter page" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/firestoreStorageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Firestore Storage Function" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>